<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pages="clr-namespace:ScTools.UI.Pages">
  <Design.PreviewWith>
    <Border Padding="20">
      <pages:ProgramsPage/>
    </Border>
  </Design.PreviewWith>
  <Style Selector=":is(UserControl).page">
    <Setter Property="Background" Value="#1fffffff"/>
  </Style>
  <Style Selector=":is(UserControl).page Button">
    <Setter Property="Background" Value="#007acc"/>
    <Setter Property="BorderThickness" Value="0"/>
  </Style>
  <Style Selector=":is(UserControl).page Button /template/ ContentPresenter">
    <Setter Property="CornerRadius" Value="3"/>
  </Style>
  <Style Selector=":is(UserControl).page Button:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="#1C97EA"/>
  </Style>
</Styles>
