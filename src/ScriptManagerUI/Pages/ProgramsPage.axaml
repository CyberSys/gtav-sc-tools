<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ScTools.UI.Pages.ProgramsPage"
             Classes="page">
  <DockPanel Margin="10 20 10 10">
    <StackPanel DockPanel.Dock="Left" Orientation="Vertical" Spacing="4" Margin="0 0 8 0">
      <TextBlock>
        <TextBlock.Text>
          <MultiBinding StringFormat="{}Scripts: {0}/{1}">
            <Binding Path="StoreUsed"/>
            <Binding Path="StoreSize"/>
          </MultiBinding>
        </TextBlock.Text>
      </TextBlock>
      <Button Classes="simple" Command="{Binding RegisterScript}">Register Script</Button>
    </StackPanel>
    <ListBox DockPanel.Dock="Right" Items="{Binding Scripts}" />
  </DockPanel>
</UserControl>
